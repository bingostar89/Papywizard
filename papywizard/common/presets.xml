            <pict yaw="300." pitch="-15." />
            <pict yaw="240." pitch="-15." />
            <pict yaw="180." pitch="-15." />
            <pict yaw="120." pitch="-15." />
            <pict yaw="60." pitch="-15." />
            <pict yaw="0." pitch="-15." />
            <pict yaw="None" pitch="-90." />
        </shoot>
    </preset>

    <preset name="4@30 + 4@-30">
        <tooltip>
            Tokina 10-17 @ 10 mm on APS-C (x1.6)
            4 picts @ +30°
            4 picts @ -30°
