<?xml version="1.0" ?>
<papywizard>
    <preset name="4@0 + Z + N">
        <tooltip>
            4 picts @ 0°
            zenith
            nadir
        </tooltip>
        <shoot>
            <pict yaw="  0.0" pitch="  0.0">
            <pict yaw=" 90.0" pitch="  0.0">
            <pict yaw="180.0" pitch="  0.0">
            <pict yaw="270.0" pitch="  0.0">
            <pict yaw="270.0" pitch=" 90.0">
            <pict yaw="270.0" pitch="-90.0">
        </shoot>
    </preset>
    <preset name="3@-15 + Z">
        <tooltip>
            3 picts @ -15°
            zenith
        </tooltip>
        <shoot>
        </shoot>
    </preset>
    <preset name="6@30 + 6@-15 + N">
        <tooltip>
            6 picts @ +30°
            6 picts @ -15°
            nadir
        </tooltip>
        <shoot>
        </shoot>
    </preset>
    <preset name="3 + 6 + 12 + 6 + 3 (28mm)">
        <tooltip>
            for 28mm equiv. lenses
            3  picts @ +70°
            6  picts @ +40°
            12 picts @ -10°/+10°
            6  picts @ -40°
            3  picts @ -70°
        </tooltip>
        <shoot>
        </shoot>
    </preset>
</papywizard>

